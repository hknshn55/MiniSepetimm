<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniSepetim.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style @*type="text/css"*@>
        body {
            
            background: url('@Url.Content("~/pictures/2875573.jpg")') no-repeat center center fixed; 
            background-size: cover;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color: #333">
            <div class="container">
               
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        

                        @if (User.Identity.IsAuthenticated)
                        {

                            

                           
                            <li class="nav-item" style="margin-left:auto">
                                <a class="btn btn-default text-white" style="background-color: #3a3f44 " asp-controller="Product" asp-action="Index">Ürünler</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item" style="margin-left:auto">
                                    <a class="btn btn-default text-white" style="background-color: #3a3f44 " asp-controller="Category" asp-action="Index">Kategoriler</a>
                                </li>
                            }

                            @if (!User.IsInRole("Admin"))
                            {
                                <li class="nav-item" style="margin-left:auto" id="spt">
                                    <a class="btn btn-default text-white" style="background-color: #3a3f44 " asp-controller="Product" asp-action="Basket">Sepetim @await Component.InvokeAsync("BasketNotificationComponent")</a>
                                </li>

                            }
                            @if (User.IsInRole("Seller"))
                            {
                                <li class="nav-item" style="margin-left:auto">
                                    <a class="btn btn-default text-white" style="background-color: #3a3f44 " asp-controller="Seller" asp-action="MyProduct"><strong>Ürünlerim</strong></a>
                                </li>
                            }
                            <li class="nav-item" style="margin-left:auto">
                                <a class="btn btn-default text-white" style="background-color: #3a3f44 " asp-controller="Account" asp-action="LogOut">Çıkış</a>
                            </li>
                            <li class="nav-item" style="margin-left:auto">
                                <p class="btn btn-default text-truncate" style="color:red; background-color: #3a3f44 ">@User.Identity.Name</p>
                            </li>
                        }
                        else
                        {
                                <li class="nav-item" style="margin-left:auto">
                            <a class="btn btn-default text-white" style="background-color: #3a3f44" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item" style="margin-left:auto">
                            <a class="btn btn-default text-white" style="background-color: #3a3f44 " asp-controller="Account" asp-action="AdminRegister">Admin Üyeliği</a>
                        </li>
                        <li class="nav-item" style="margin-left:auto">
                            <a class="btn btn-default text-white" style="background-color: #3a3f44 " asp-controller="Account" asp-action="SellerRegister">Satıcı Üyeliği</a>
                        </li>
                        <li class="nav-item" style="margin-left:auto">
                            <a class="btn btn-default text-white" style="background-color: #3a3f44 " asp-controller="Account" asp-action="CustomerRegister">Müşteri Üyeliği</a>
                        </li>
                        <li class="nav-item" style="margin-left:auto">
                            <a class="btn btn-default text-white" style="background-color: #3a3f44 " asp-controller="Account" asp-action="Login">Giriş</a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MiniSepetim.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
