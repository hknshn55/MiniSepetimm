@model IEnumerable<MiniSepetim.Entities.Dtos.ProductDtos.ProductPictureDto> 


    <div class="row">
        <div class="col-12 text-right">
            <a class="btn btn-success" asp-action="AddProduct" asp-controller="Product" >Yeni Ürün Ekle</a>
        </div>
    </div>
    <div class="row mt-3">
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                *
            </th>
            <th>
                Görünüm
            </th>
            <th>
                Ürün
            </th>
            <th>
                Kategori
            </th>
            <th>
                Satıcı
            </th>
            <th>
                Fiyat
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td></td>
            <td>
                <img src="@item.Paths" style="width:50px; height:50px;" alt="@item.ProductName" />
            </td>
            <td>
                @item.ProductName
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                @item.SellerName
            </td>
            <td>
                @item.Price
            </td>
            <td>
                <a asp-action="Update" asp-controller="Seller" class="btn btn-success" asp-route-id="@item.ProductId">
                    Güncelle
                </a>
                <a asp-action="Delete" asp-controller="Product" class="btn btn-danger" asp-route-id="@item.ProductId" >
                    Sil
                </a>
            </td>
        </tr>
        }
    </tbody>
</table></div>